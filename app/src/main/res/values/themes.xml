    <style name="roundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="TextViewExercise">
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">17dp</item>
    </style>

    <style name="DatePickerDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@color/semi_black</item>
        <item name="android:textColorPrimary">@color/amarelo_personalizado</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:colorAccent">@color/semi_black</item>
    </style>

    <style name="TextViewCardWorkout">
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextViewDivision">
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">28sp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:textColor">@color/amarelo_personalizado</item>
    </style>

    <style name="linearLayoutExercise">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="CardView.Workout" parent="CardView.Dark">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textColor">@color/amarelo_personalizado</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="cardBackgroundColor">@color/semi_black</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardUseCompatPadding">true</item>

    </style>

    <style name="DialogInvisible" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="linearLayoutDivision">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingTop">15dp</item>
    </style>

    <style name="ImageViewExercise">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/image_circle_background</item>
    </style>

    <style name="ImageViewDivision">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/image_circle_background</item>
    </style>


    <style name="CardViewImage">
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="shapeAppearanceOverlay">@style/roundedImage</item>
    </style>

    <style name="Theme.Training" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">#FDFDFD</item>
        <item name="cardViewStyle">@style/CardView.Workout</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>