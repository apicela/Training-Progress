<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:windowBackground="@android:color/transparent"
    android:background="@color/semi_black"

    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/black_dialog"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clique em confirmar para deletar o item abaixo:"
            android:textColor="@color/amarelo_personalizado"
            android:padding="25dp"
            android:gravity="center"
            android:textSize="25sp"></TextView>

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="27sp"></TextView>

    </LinearLayout>


    <Button
        android:id="@+id/buttonConfirmar"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginVertical="10dp"
        android:background="@drawable/yellow_bordered_button"
        android:text="Confirmar"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/buttonCancelar"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:background="@drawable/yellow_bordered_button"
        android:text="Cancelar"
        android:textColor="@color/black" />
</LinearLayout>
</LinearLayout>
